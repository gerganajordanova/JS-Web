<section>
    <h2>Edit article 
        {{#if ./admin}}
        <div class="controls">
            <a href="/article/unlock/{{article._id}}">Unlock article</a>
            <a href="/article/lock/{{article._id}}">Lock article</a>
        </div>
        {{/if}}
    </h2>
    <div class="spacer">
        <form action="/article/edit/{{article._id}}" method="POST">
            <label>Article title</label>
            <h3>{{article.title}}</h3>
            <label for="content">Content</label>
            <textarea name="content" id="content">{{article.edits.0.content}}</textarea>
            <input type="submit" value="Submit">
        </form>
    </div>
</section>